<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <!-- attributes -->
    <aura:attribute name="dataLength" type="Integer" />
    <aura:attribute name="debtObject" type="Object" />
    
    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    <aura:registerEvent name="modelEvent" type="c:modelEvent"/>
    
    <div class="slds-m-around_xx-large">
        
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Add Debt</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <table class="slds-table slds-table_cell-buffer slds-table_bordered" aria-labelledby="element-with-table-label other-element-with-table-label">
                        <thead>
                            <tr class="slds-line-height_reset">
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Creditor">Creditor</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="First Name">First Name</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Last Name">Last Name</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Min Pay%">Min Pay%</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Balance">Balance</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="slds-hint-parent">
                                <td>
                                    <lightning:input name="creditor" placeholder="Creditor Name" value="{!v.debtObject.creditorName}" variant="label-hidden"/>
                                </td>
                                <td>
                                    <lightning:input name="FirstName" placeholder="First Name" value="{!v.debtObject.firstName}" variant="label-hidden"/>
                                </td>
                                <td>
                                    <lightning:input name="LastName" placeholder="Last Name" value="{!v.debtObject.lastName}" variant="label-hidden"/>
                                </td>
                                <td>
                                    <lightning:input name="MinPay" type="number" placeholder="Min Pay" variant="label-hidden" value="{!v.debtObject.minPaymentPercentage}" formatter="percent-fixed" step="0.01" />
                                </td>
                                <td>
                                    <lightning:input name="Balance" type="number" placeholder="Balance" variant="label-hidden" value="{!v.debtObject.balance}" formatter="currency" step="0.01"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{! c.closeModel }"/>
                    <lightning:button variant="brand" label="Add" title="Add" onclick="{! c.submitDetails }"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>